{% extends 'front/layout/layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8 ">
                {% if error %}
                    <div class="alert alert-danger text-center"><i
                                class="fa fa-info-circle"></i>&nbsp;{{ error.message|trans({}, 'security') }}
                    </div>
                {% endif %}
                <form action="{{ path('login') }}" method="post"
                      class="text-center col-md-offset-1 col-md-10">
                    <div class="form-group">
                        <input class="form-control" type="text" id="username" name="_username"
                               value="{{ last_username }}" placeholder="Username"/>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" id="password" name="_password"
                               placeholder="Mot de passe"/>
                        <br/>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success form-control" type="submit">
                            <i class="fa fa-sign-in"></i>&nbsp;
                            Connexion
                        </button>
                    </div>
                    <div class="form-group">
                        <a href="#">Mot de passe oubli√© ?</a>
                    </div>
                    <hr>
                    <div class="form-group">
                        <p>
                            Vous n'avez pas de compte ?
                        </p>
                        <a href="{{ path('register') }}" class="btn btn-outline-info pull-right">
                            <i class="fa fa-user-plus"></i>&nbsp;
                            Inscrivez-vous
                        </a>
                    </div>
                    <input type="hidden" name="_failure_path" value="{{ path('login') }}#connexion"/>
                </form>

            </div>
        </div>
    </div>

{% endblock %}