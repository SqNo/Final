{% extends 'Admin/Common/layout.html.twig' %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-icon card-header-rose">
                                <div class="card-icon">
                                    <i class="material-icons">assignment</i>
                                </div>
                                <h4 class="card-title ">Liste des utilisateurs</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class=" text-primary">
                                        <th>
                                            ID
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Pseudo
                                        </th>
                                        <th>
                                            Créé le
                                        </th>
                                        <th>
                                            Activé
                                        </th>
                                        </thead>
                                        <tbody>
                                        {% for user in users %}
                                            <tr>
                                                <td>
                                                    {{ user.id }}
                                                </td>
                                                <td>
                                                    {{ user.email }}
                                                </td>
                                                <td>
                                                    {{ user.username }}
                                                </td>
                                                <td>
                                                    {{ user.dateCreated|date('d/m/Y') }}
                                                </td>
                                                <td>
                                                    {% if user.activated == true %}
                                                        <i class="material-icons">check_circle_outline</i>
                                                    {% else %}
                                                        <i class="material-icons">cancel</i>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}