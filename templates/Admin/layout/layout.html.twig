<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>

    <title>
        {% block title %} CAPB Admin {% endblock %}
    </title>
    <!--     Fonts and icons     -->
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons"/>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css"/>
        <link rel="stylesheet" href="{{ asset('build/admin.css') }}">
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        <!-- iframe removal -->
    {% endblock %}
</head>
<body>
<div class="wrapper">
    {% block sidebar %}
        {% include 'admin/layout/sidebar.html.twig' %}
    {% endblock %}
    <div class="main-panel">
        {% include 'admin/layout/navbar.html.twig' %}
        <div class="content">
            {% block flashes %}
                <div class="container-fluid">
                    {% for message in app.flashes('admin_info') %}
                        <div class="alert alert-success text-center">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <i class="material-icons">close</i>
                            </button>
                            <span>{{ message }}</span>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('admin_warning') %}
                        <div class="alert alert-warning">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <i class="material-icons">close</i>
                            </button>
                            <span>{{ message }}</span>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('admin_danger') %}
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <i class="material-icons">close</i>
                            </button>
                            <span>{{ message }}</span>
                        </div>
                    {% endfor %}
                </div>
            {% endblock %}
            {% block body %}
            {% endblock %}
        </div>

        {% include 'admin/layout/footer.html.twig' %}
    </div>
</div>
</body>
{% block javascripts %}
    <script src="{{ asset('build/admin.js') }}"></script>
    <!--  Google Maps Plugin  -->
    <script type="text/javascript"
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA3-9s518x20Ax8Jb7yv1TOwbGD7xUXoWw"></script>
{% endblock %}
</html>